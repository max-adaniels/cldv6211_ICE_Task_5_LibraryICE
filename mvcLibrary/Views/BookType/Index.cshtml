@model IEnumerable<mvcLibrary.Models.BookType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("Index", "BookType", FormMethod.Get))
{
    <table>
        <tr>
            <td>
                @Html.TextBox("searchValue", ViewData["searchValue"], new { @class = "form-control", placeholder = "Enter search value..." })
            </td>
            <td>
                <input type="submit" value="Search for a book type" class="btn btn-primary" />
            </td>
            <td>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </td>
        </tr>
    </table>
}

<!-- Display No Results Message if Model is Empty -->
@if (Model.Count() == 0)
{
    <div class="alert alert-info" role="alert">
        No results found. Please try another search term.
    </div>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}